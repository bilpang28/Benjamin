
@{
    ViewBag.Title = "chartsc3";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- C3 charts css -->
<link href="~/assets/plugins/c3/c3.min.css" rel="stylesheet" type="text/css" />
<div class="container-fluid">

    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="btn-group float-right">
                    <ol class="breadcrumb hide-phone p-0 m-0">
                        <li class="breadcrumb-item"><a href="#">Annex</a></li>
                        <li class="breadcrumb-item"><a href="#">Charts</a></li>
                        <li class="breadcrumb-item active">C3 Chart</li>
                    </ol>
                </div>
                <h4 class="page-title">C3 Chart</h4>
            </div>
        </div>
    </div>
    <!-- end page title end breadcrumb -->

    <div class="row">
        <div class="col-lg-6">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Bar Chart</h4>
                    <p class="text-muted m-b-30 font-14">Display as Bar Chart.</p>

                    <div id="chart"></div>
                </div>
            </div>
        </div> <!-- end col -->

        <div class="col-lg-6">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Stacked Area Chart</h4>
                    <p class="text-muted m-b-30 font-14">Display as Stacked Area Chart.</p>

                    <div id="chart-stacked"></div>

                </div>
            </div>
        </div> <!-- end col -->
    </div> <!-- end row -->


    <div class="row">
        <div class="col-lg-6">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Roated Chart</h4>
                    <p class="text-muted m-b-30 font-14">Display as roated Chart.</p>

                    <div id="roated-chart"></div>
                </div>
            </div>
        </div> <!-- end col -->

        <div class="col-lg-6">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Combine Chart</h4>
                    <p class="text-muted m-b-30 font-14">Display all kinda charts up in here.</p>

                    <div id="combine-chart"></div>

                </div>
            </div>
        </div> <!-- end col -->
    </div> <!-- end row -->


    <div class="row">
        <div class="col-lg-6">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Donut Chart</h4>
                    <p class="text-muted m-b-30 font-14">Display as Donut Chart.</p>

                    <div id="donut-chart"></div>

                </div>
            </div>
        </div> <!-- end col -->

        <div class="col-lg-6">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Pie Chart</h4>
                    <p class="text-muted m-b-30 font-14">Display as Pie Chart.</p>

                    <div id="pie-chart"></div>

                </div>
            </div>
        </div> <!-- end col -->
    </div> <!-- end row -->

</div><!-- container -->
@section scripts{
    <!--C3 Chart-->
    <script type="text/javascript" src="~/assets/plugins/d3/d3.min.js"></script>
    <script type="text/javascript" src="~/assets/plugins/c3/c3.min.js"></script>
    <script src="~/assets/pages/c3-chart-init.js"></script>
}

